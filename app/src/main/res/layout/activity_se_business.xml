<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeBusiness"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:src="@drawable/upperback"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/business"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="Business"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical"
            android:layout_marginTop="280dp"
            android:paddingStart="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Shop Name"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#BD0101"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Bata"
                android:textColor="#000000"
                android:background="@drawable/custom"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#817070"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Address"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="4dp"
                    android:textColor="#BD0101"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:background="@drawable/custom"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#817070"
                android:hint="Dhaka"
                android:maxLines="1"
                android:singleLine="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM Ref No."
                    android:textColor="#333333"
                    android:textSize="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="4dp"
                    android:textColor="#BD0101"
                    android:textSize="16sp" />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom"
                android:textColor="#000000"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#817070"
                android:hint="######"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="16sp"
                    android:textColor="#333333" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="4dp"
                    android:textColor="#BD0101"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="170dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="4dp"
                    android:textColor="#BD0101"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <AutoCompleteTextView
                    android:id="@+id/city"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="#817070"
                    android:hint="Dhaka"
                    android:completionThreshold="1"
                    android:maxLines="1"
                    />
                <AutoCompleteTextView
                    android:id="@+id/area"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="#817070"
                    android:hint="Gulshan"
                    android:completionThreshold="1"
                    android:maxLines="1"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnid"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_custom"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:text="Submit"
                />
            <Button
                android:id="@+id/btnidprev"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttonwhiteorange"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Previous"
                android:textColor="#000000"
                />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>